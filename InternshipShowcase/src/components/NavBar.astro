---
import { navLinks } from "../constants";
---

<div class="w-full flex justify-between fixed dark-null-gradient">

  <nav class="w-full flex items-center py-5 px-5 fixed top-0 z-20">
    <div class="w-full flex justify-between items-center max-w-7x1 mx-auto">
      <!-- Left side of nav -->
      <a href="/" class="flex items-center gap-2">
        <p class="text-white text-[18px] font-bold cursor-pointer flex">
          Internship&nbsp;
          <span class="sm:block hidden text-red-gradient">|&nbsp;Showcase</span>
        </p>
      </a>

      <!-- Right side of nav -->
      <ul class="list-none lg:flex hidden flex-row gap-10">
        {
          navLinks.map((link) => (
            <li class="hover:text-[#FF0029] text-white text-[18px] font-medium cursor-pointer">
              <a href={`${link.post_link}`}>{link.title}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </nav>
</div>
