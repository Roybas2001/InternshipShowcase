---
import { navLinks } from "../constants";
import NavBarMobile from "./MobileNav.jsx";
import { ElephantCanvas } from "./canvas";
---
<nav class="w-full flex items-center py-5 px-5 fixed top-0 z-20">
    <div class="w-full flex justify-between items-center max-w-7x1 mx-auto">

        <!-- Left side of nav -->
        <a href="/" class="flex items-center gap-2">
        <p class="text-white text-[18px] font-bold cursor-pointer flex">Internship &nbsp;
            <span class="sm:block hidden">|&nbsp;Showcase</span>
        </p> 
        <div style="max-width: 20%; max-height: 30px;"><ElephantCanvas client:load /></div>
        </a>
        

        <!-- Right side of nav -->
        <ul class="list-none lg:flex flex-row gap-10">
            {navLinks.map((link) => (
              <li
              class="hover:text-[#FF0029] text-white text-[18px] font-medium cursor-pointer">
                <a href={`#${link.id}`}>
                  {link.title}    
                </a>
              </li>
            ))}
        </ul>

        <!-- Mobile view -->
        <div class="lg:hidden flex flex-1 justify-end items-center">
          <!-- <NavBarMobile /> -->
        </div>
    </div>
</nav>