---
import { ElephantCanvas } from "../components/canvas";
import "../styles/global.css";
---

<section class="relative w-full h-screen mx-auto">
  <div
    class="sm:px-16 px-6 absolute inset-0 top-[120px] max-w-7xl mx-auto flex flex-row items-start gap-5 z-10"
  >
    <div class="w-full flex flex-row justify-between">
      <!-- Replace with 3D model Text -->
      <div>
        <h1
          class="font-black lg:text-[80px] sm:text-[60px] xs:text-[50px] text-[40px] lg:leading-[98px] mt-2 text-white"
        >
          Internship <span class="text-red-gradient">WebElephant</span>
        </h1>
      </div>
    </div>
  </div>

  <!-- Import 3D Model -->
  <ElephantCanvas client:load />
  <div class="flex justify-center items-center">
    <div
      class="glow glow-white w-[50rem] h-[55rem] top-0 right-56 opacity-20 z-index-10 rounded-full"
    >
    </div>
  </div>
</section>
