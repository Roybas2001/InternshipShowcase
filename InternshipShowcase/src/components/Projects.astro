---
import { projects } from "../constants";
---
<div id="projects">
<div class="xl:mt-12 xl:flex-row flex-col-reverse flex gap-10 overflow-hidden">
  <div class="w-full p-8 rounded-2xl">
    <p
      class="sm:text-[18px] text-[14px] text-secondary uppercase tracking-wider text-center"
    >
      Overview
    </p>
    <h2
      class="text-red-gradient font-black md:text-[60px] sm:text-[50px] xs:text-[40px] text-[30px] text-center"
    >
      Projects
    </h2>
  </div>
</div>

<div class="xl:mt-12 flex-row flex gap-10">
  {
    projects.map((link) => (
      <div class="slideIn-left flex-[0.75] bg-black-100 p-8 rounded-2xl">
        <p class="sm:text-[18px] text-[14px] text-secondary uppercase tracking-wider">
          {link.subtitle}
        </p>
        <h2 class="text-red-gradient font-black md:text-[60px] sm:text-[50px] xs:text-[40px] text-[30px]">
          {link.title}
        </h2>
        <a
          href={`${link.post_link}`}
          class="mt-4 hover:text-[#FF0029] text-white text-[18px] font-medium cursor-pointer"
        >
          Read More ->
        </a>
      </div>
    ))
  }
</div>
</div>